<div class="jumbotron text-center">
    <h1>Contact Us</h1>

    <br/><br/>

    <p>Please enter your email address and your message</p>

    <form class="form-horizontal">
      <div class="form-group has-feedback {{if isValidEmail 'has-success'}}">
        <label for="inputEmail3" class="col-sm-2 control-label">Email</label>
        <div class="col-sm-10">
          {{input type="email" value=emailAddress class="form-control" placeholder="Please type your e-mail address." autofocus="autofocus"}}
        </div>
      </div>
      <div class="form-group has-feedback {{if isMessageEnoughLong 'has-success'}}">
        <label for="inputPassword3" class="col-sm-2 control-label">Message</label>
        <div class="col-sm-10">
          {{textarea class="form-control" placeholder="Your message. (At least 5 characters.)" rows="7" value=message}}
        </div>
      </div>

      <div class="row">
          <button class="btn btn-primary btn-lg btn-block" disabled={{isNotValid}} {{action 'sendEmail'}}>Send</button>
      </div>
    </form>

    <br/><br/>

    {{#if responseMessage}}
        <div class="alert alert-success">{{responseMessage}}</div>
    {{/if}}

</div>
